{
  "kind": "collectionType",
  "collectionName": "privacy_term_items",
  "info": {
    "singularName": "privacy-term-item",
    "pluralName": "privacy-term-items",
    "displayName": "Pages - PPs & T&Cs"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "name": {
      "type": "string",
      "required": true
    },
    "slug": {
      "type": "uid",
      "targetField": "name",
      "required": true
    },
    "date": {
      "type": "date",
      "required": true
    },
    "content_only": {
      "type": "boolean",
      "required": true,
      "default": false
    },
    "text_orientation": {
      "type": "enumeration",
      "required": true,
      "default": "left",
      "enum": [
        "left",
        "right"
      ]
    },
    "rich_text": {
      "type": "component",
      "component": "resource.rich-text",
      "repeatable": false,
      "required": true
    },
    "seo": {
      "type": "component",
      "component": "seo.seo-meta",
      "repeatable": false,
      "required": true
    }
  }
}
